# project initialization
npm init -y
mkdir src
mkdir src/client
mkdir dist
touch webpack.config.js server.js src/index.js src/client/app.js dist/index.html

# package installs
npm install webpack webpack-cli --save-dev
npm install -D babel-loader @babel/core @babel/preset-env @babel/preset-react
npm install express # todo: should this be --save-dev?
npm install react react-dom
npm install mongodb # todo: should this be --save-dev?
npm install --save lodash

